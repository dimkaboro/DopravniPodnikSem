<UserControl x:Class="DopravniPodnikSem.Views.Step3View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Email" Foreground="Gray" Margin="0,5"/>
        <Border Style="{StaticResource RoundedInputBorderStyle}">
            <TextBox Width="250" Text="{Binding Email}" Style="{StaticResource EnhancedTextBoxStyle}"/>
        </Border>
        
        <TextBlock Text="Password" Foreground="Gray" Margin="0,5"/>
        <Border Style="{StaticResource RoundedInputBorderStyle}">
            <PasswordBox Width="250" PasswordChanged="PasswordBox_PasswordChanged" Style="{StaticResource EnhancedPasswordBoxStyle}" />
        </Border>
    </StackPanel>
</UserControl>
