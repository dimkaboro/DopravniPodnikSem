<UserControl x:Class="DopravniPodnikSem.Views.Step1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Name" Foreground="Gray" Margin="0,5"/>
        <Border Style="{StaticResource RoundedInputBorderStyle}">
            <TextBox Width="250" Text="{Binding Name}" Style="{StaticResource EnhancedTextBoxStyle}"/>
        </Border>
        
        <TextBlock Text="Surname" Foreground="Gray" Margin="0,5"/>
        <Border Style="{StaticResource RoundedInputBorderStyle}">
            <TextBox Width="250" Text="{Binding Surname}" Style="{StaticResource EnhancedTextBoxStyle}"/>
        </Border>
        
        <TextBlock Text="Phone Number" Foreground="Gray" Margin="0,5"/>
        <Border Style="{StaticResource RoundedInputBorderStyle}">
            <TextBox Width="250" Text="{Binding PhoneNumber}" Style="{StaticResource EnhancedTextBoxStyle}"/>
        </Border>
    </StackPanel>
</UserControl>
